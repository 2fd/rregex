{
  "name": "rregex",
  "version": "0.0.0-development",
  "description": "Rust Regex binding for Javascript",
  "private": false,
  "type": "module",
  "main": "./lib/commonjs.cjs",
  "module": "./lib/esm.mjs",
  "browser": "./lib/web.js",
  "types": "./lib/types.d.ts",
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "concurrently": "^8.2.2",
    "semantic-release": "^23.0.6",
    "toml": "^3.0.0"
  },
  "scripts": {
    "setup": "./bin/install.sh",
    "build": "./bin/build.sh",
    "test": "wasm-pack test --node && jest --passWithNoTests",
    "test:rs": "wasm-pack test",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "node\\.test\\.[cm]js$"
  },
  "release": {
    "ci": false,
    "branches": [
      {
        "name": "1.0.x",
        "range": "1.0.x",
        "channel": "1.0.x"
      },
      {
        "name": "1.1.x",
        "range": "1.1.x",
        "channel": "1.1.x"
      },
      {
        "name": "1.2.x",
        "range": "1.2.x",
        "channel": "1.2.x"
      },
      {
        "name": "1.3.x",
        "range": "1.3.x",
        "channel": "1.3.x"
      },
      {
        "name": "1.4.x",
        "range": "1.4.x",
        "channel": "1.4.x"
      },
      {
        "name": "1.5.x",
        "range": "1.5.x",
        "channel": "1.5.x"
      },
      {
        "name": "1.6.x",
        "range": "1.6.x",
        "channel": "1.6.x"
      },
      {
        "name": "1.7.x",
        "range": "1.7.x",
        "channel": "1.7.x"
      },
      {
        "name": "1.8.x",
        "range": "1.8.x",
        "channel": "1.8.x"
      },
      {
        "name": "1.9.x",
        "range": "1.9.x",
        "channel": "1.9.x"
      },
      {
        "name": "master"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "lib/standalone.js",
              "label": "js"
            },
            {
              "path": "lib/esm.mjs",
              "label": "esm"
            },
            {
              "path": "lib/esm.d.ts",
              "label": "typescript"
            },
            {
              "path": "lib/rregex.wasm",
              "label": "wasm"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "node bin/jsr.mjs ${nextRelease.version} && npx jsr publish"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2fd/rregex.git"
  },
  "author": "Fede Ramirez <i@2fd.me>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/2fd/rregex/issues"
  },
  "homepage": "https://github.com/2fd/rregex#readme"
}
